{
    "name": "Chrome Extension Reloader",
    "version": "2.1",
    "manifest_version": 2,
    "background": {
        "scripts": ["bg.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon48.png",
        "default_title": "Reload extension"
    },
    "icons": {
        "128": "icon48.png"
    },
    "options_page": "options.html",
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+E"
            }
        }
    },
    "permissions": ["management", "http://localhost:*/", "http://127.0.0.1:*/"]
}
